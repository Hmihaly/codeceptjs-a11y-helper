{
  "name": "codeceptjs-a11y-helper",
  "version": "1.0.0",
  "description": "Accessibility Testing Helper for codeceptjs",
  "main": "dist/index.js",
  "scripts": {
    "lint": "rome check src",
    "lint:fix": "rome check src --apply-suggested",
    "prepare": "husky install",
    "code:format": "rome format src --write",
    "tsc": "tsc -d"
  },
  "keywords": [
    "codeceptjs",
    "a11y"
  ],
  "license": "ISC",
  "dependencies": {
    "@codeceptjs/helper": "^2.0.1",
    "axe-playwright": "^1.2.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "codeceptjs": "^3.5.0",
    "flowmatic-cicd": "^1.2.9",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "rome": "^11.0.0",
    "typescript": "^4.4.2"
  },
  "files": [
    "dist/*",
    "README.md"
  ],
  "release": {
    "branches": [
      "main"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:kobenguyent/codeceptjs-a11y-helper.git"
  },
  "bugs": {
    "url": "https://github.com/kobenguyent/codeceptjs-a11y-helper/issues"
  },
  "homepage": "https://github.com/kobenguyent/codeceptjs-a11y-helper#readme",
  "author": "Thanh Nguyen <kobenguyent@gmail.com>",
  "lint-staged": {
    "**/*": "rome format src --write"
  }
}
